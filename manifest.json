{
  "description": "Changes CR's \"JoJo's Bizarre Adventure\" subs to use the correct Stand names.",
  "manifest_version": 2,
  "name": "CR JoJo Fixer",
  "version": "1.0",
  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "*://*.crunchyroll.com/*/jojos-bizarre-adventure/", "*://*.akamaized.net/*"
  ],

  "background": {
    "scripts": ["crjojofixer.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}